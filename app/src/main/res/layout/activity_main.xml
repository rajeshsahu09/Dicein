<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constLayout1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:gravity="bottom"
            android:orientation="vertical"
            android:padding="10dp"
            app:layout_constraintBottom_toBottomOf="@id/constLayout1"
            app:layout_constraintEnd_toEndOf="@id/constLayout1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/constLayout1"
            app:layout_constraintTop_toTopOf="@id/constLayout1">

            <TextView
                android:id="@+id/Player1Text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:text="Player 1"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/score1Text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="55"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="70sp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/currentScore1Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="5"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="36sp" />

                    <TextView
                        android:id="@+id/currScoreText1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current Score"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="bottom"
                android:orientation="horizontal"
                android:padding="2dp">

                <Button
                    android:id="@+id/passDice1btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button_design"
                    android:onClick="onPass1BtnClick"
                    android:text="PASS DICE"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/rollDice1btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button_design"
                    android:onClick="onRoll1BtnClick"
                    android:text="ROLL DICE"
                    android:textColor="@android:color/background_light" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:gravity="top"
            android:orientation="vertical"
            android:padding="10dp"
            android:rotation="0"
            app:layout_constraintBottom_toBottomOf="@id/constLayout2"
            app:layout_constraintEnd_toEndOf="@id/constLayout2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/constLayout2"
            app:layout_constraintTop_toTopOf="@id/constLayout2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:orientation="horizontal"
                android:padding="2dp">

                <Button
                    android:id="@+id/rollDice2btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button_design"
                    android:onClick="onRoll2BtnClick"
                    android:rotation="180"
                    android:text="ROLL DICE"
                    android:textColor="@android:color/background_light" />

                <Button
                    android:id="@+id/passDice2btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button_design"
                    android:onClick="onPass2BtnClick"
                    android:rotation="180"
                    android:text="PASS DICE"
                    android:textColor="@android:color/background_light" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:textAlignment="center">

                    <TextView
                        android:id="@+id/currScoreText2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rotation="180"
                        android:text="Current Score"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/currentScore2Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:rotation="180"
                        android:text="5"
                        android:textAlignment="center"
                        android:textColor="@android:color/background_light"
                        android:textSize="36sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/score2Text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:rotation="180"
                    android:text="55"
                    android:textAlignment="center"
                    android:textColor="@android:color/background_light"
                    android:textSize="70sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/Player2Text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="bottom"
                android:rotation="180"
                android:text="Player 2"
                android:textAlignment="center"
                android:textColor="@android:color/background_light"
                android:textSize="30sp" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50615597" />

    <ImageView
        android:id="@+id/diceImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dice5" />

</androidx.constraintlayout.widget.ConstraintLayout>